{
  "name": "mcp-game-asset-gen",
  "version": "0.0.3",
  "description": "MCP server for asset generation - image, video, audio, and 3D APIs for game development",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "mcp-asset-gen": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "AGENTS.md",
    "schemas/**/*"
  ],
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "tsc",
    "dev": "npm run build && npm run start",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:integration": "NO_MOCK_PROVIDERS=true vitest run src/integration.test.ts",
    "test:integration:cleanup": "NO_MOCK_PROVIDERS=true CLEANUP_TEST_FILES=true vitest run src/integration.test.ts",
    "test:all": "vitest run",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "version:update": "node scripts/update-version.js"
  },
  "keywords": [
    "mcp",
    "asset-generation",
    "image",
    "video",
    "audio",
    "3d",
    "game-development"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "dotenv": "^16.4.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  }
}
